<IfModule mod_rewrite.c>
  RewriteEngine On

  # =========================
  # 1️⃣ BIARKAN API LEWAT KE FOLDER /api
  # =========================
  RewriteCond %{REQUEST_URI} ^/api
  RewriteRule ^ - [L]

  # =========================
  # 2️⃣ REACT SPA ROUTING
  # =========================
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule . /index.html [L]
</IfModule>
